pipeline {
  agent none
  stages {
    stage ('build') {
    agent { label 'slave-1' }
      steps {
        sh '''
                echo "this is build stage"
                sleep 2
            '''
       }
   }
   stage ('deploy') {
   agent { label 'slave-2' }
      steps {
        sh '''
                echo "this is deploy stage"
                sleep 2
            '''
       }
   }
   stage ('test') {
   agent { label 'slave-1' }
    steps {
        sh '''
                echo "this is test stage"
                sleep 2
            '''
       }
   }
   }
   }
